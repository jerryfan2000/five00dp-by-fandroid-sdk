    android:layout_height="match_parent"
    android:background="#FFF4F4F4" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0px" >
